    <!--
        Added the constraints for entity HighScore.
    -->
    <changeSet id="20221117094551-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="game_id"
                                 baseTableName="high_score"
                                 constraintName="fk_high_score__game_id"
